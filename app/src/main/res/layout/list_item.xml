<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_100sdp"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:layout_marginTop="@dimen/_30sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_17sdp"
    android:background="@color/colorWhite"
    android:backgroundTint="@color/colorWhite"
    app:cardBackgroundColor="@color/colorWhite"
    >
    <RelativeLayout
        android:backgroundTint="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_80sdp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spider-Man"
                android:transitionName="title"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:transitionName="date"
                android:text="20-20-2020"/>
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="rate"
                android:text="8.5"
                android:textColor="@color/colorYellow"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/overview"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="overview"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="dlabsdlbasldbaldblabdlakbdlaksbdlakbdlakbdlakbdlakbdlaksbddbaasdasdasdasl"
            android:layout_below="@id/header"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_100sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_30sdp">
        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/poster_spiderman"
            android:transitionName="poster"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>
</FrameLayout>